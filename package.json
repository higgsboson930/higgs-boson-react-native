{
  "name": "crypto-trading-platform",
  "version": "1.0.0",
  "description": "A comprehensive mobile crypto trading platform with React Native frontend and Python backend on AWS Lambda",
  "keywords": [
    "crypto",
    "trading",
    "react-native",
    "python",
    "aws",
    "lambda",
    "fastapi",
    "mobile",
    "cryptocurrency",
    "blockchain"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/crypto-trading-platform.git"
  },
  "scripts": {
    "dev:frontend": "cd frontend && npx expo start",
    "dev:backend": "cd backend && uvicorn src.main:app --reload",
    "build:frontend": "cd frontend && npx expo build",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest",
    "deploy:dev": "./deploy.sh -e development -s crypto-trading-dev",
    "deploy:staging": "./deploy.sh -e staging -s crypto-trading-staging",
    "deploy:prod": "./deploy.sh -e production -s crypto-trading-prod",
    "lint:frontend": "cd frontend && npx eslint src/",
    "lint:backend": "cd backend && flake8 src/",
    "format:frontend": "cd frontend && npx prettier --write src/",
    "format:backend": "cd backend && black src/",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write",
      "git add"
    ],
    "backend/src/**/*.py": [
      "black",
      "flake8",
      "git add"
    ]
  }
}